<div class="admin-items">
  <div class="container">
    <% @categories.each do |category| %>

      <p><%= link_to "Create a New item", new_admin_item_path, id: "new_item", class: "btn btn-success btn-md pull-right"%></p>

      <h1><%= category.title %></h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% category.items.each do |item| %>
            <tr>
              <td><img src="<%= item.image(:thumb) %>"></td>
              <td><span class="item_title"><%= item.title %><span><td><%= number_to_currency(item.price) %></td></td>
              <td><%= item.status %></td>
              <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
              <td><%= link_to 'Destroy', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
