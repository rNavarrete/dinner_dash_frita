<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">



      <h1>Edit User Account</h1>

      <%= bootstrap_form_for(@user, html: { id: "edit-user" }) do |f| %>
      <%= f.text_field :name, placeholder: 'Name' %>
      <%= f.text_field :email, placeholder: 'Email' %>
      <%= f.text_field :username, placeholder: 'Username' %>
      <%= f.password_field :password, placeholder: 'Enter New Password' %>
              <%= f.password_field :password_confirmation, placeholder: 'Confirm New Password' %>
      <%= f.submit 'Update Account' , class: "btn btn-success"%>
      <%= link_to 'Delete Account', user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
            <%= link_to "Back", admin_path, class: "btn btn-default" %>
    </div>
    <% end  %>
  </div>
</div>